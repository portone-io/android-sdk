<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="일반 결제"
        android:textStyle="bold"
        android:backgroundTint="@color/portone_orange"
        app:layout_constraintBottom_toTopOf="@+id/btn_issue_billing_key"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_issue_billing_key"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="빌링키 발급"
        android:textStyle="bold"
        android:backgroundTint="@color/portone_orange"
        app:layout_constraintBottom_toTopOf="@+id/btn_issue_billing_key_and_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_payment" />

    <Button
        android:id="@+id/btn_issue_billing_key_and_pay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="빌링키 발급 및 결제"
        android:textStyle="bold"
        android:backgroundTint="@color/portone_orange"
        app:layout_constraintBottom_toTopOf="@+id/btn_identity_verification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_issue_billing_key" />

    <Button
        android:id="@+id/btn_identity_verification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="본인인증"
        android:textStyle="bold"
        android:backgroundTint="@color/portone_orange"
        app:layout_constraintBottom_toTopOf="@+id/btn_load_payment_ui"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_issue_billing_key_and_pay" />


    <Button
        android:id="@+id/btn_load_payment_ui"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="결제 UI 로드"
        android:textStyle="bold"
        android:backgroundTint="@color/portone_orange"
        app:layout_constraintBottom_toTopOf="@+id/btn_load_issue_billing_key_ui"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_identity_verification" />

    <Button
        android:id="@+id/btn_load_issue_billing_key_ui"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="빌링키 발급 UI 로드"
        android:backgroundTint="@color/portone_orange"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_load_payment_ui" />


</androidx.constraintlayout.widget.ConstraintLayout>